<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ui_speapp"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/logoUIImageView"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tulisan_ui"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:padding="0dp"/>

    <TextView
        android:id="@+id/titleUITextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Universitas Indonesia"
        android:textStyle="bold"
        android:textSize="28dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logoUIImageView"
        android:layout_marginTop="8dp"
        android:textColor="#FFFFFF" />

    <!-- Make Scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@id/titleUITextView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/UIFirstText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:textAlignment="center"
                android:textSize="18dp"
                android:text="University of Indonesia is a highly successful Indonesian university, located in Depok City, with an applied emphasis in courses and research. Our campus offers high quality learning, lecturing, and research spaces to better meet the needs of students and academics."
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/UISecondText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/UIFirstText"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:textAlignment="center"
                android:textSize="18dp"
                android:text="As one of Indonesia’s leading universities, we are internationally recognized through rankings and accreditation with professional bodies. Our campus’ dedication to learning and success as an institution has produced many outstanding alumni."
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/UIThirdText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/UISecondText"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:textAlignment="center"
                android:textSize="18dp"
                android:text="More Info"
                android:layout_marginBottom="48dp"
                android:textColor="#FFFFFF" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>