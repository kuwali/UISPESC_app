<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/membership_speapp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/logoUIImageView"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        android:src="@drawable/spe_uisc_logo_copy_putih"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:padding="0dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Membership"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"
        android:layout_below="@id/logoUIImageView"/>

    <Button
        android:id="@+id/membershipBenefitButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="24dp"
        android:text="Benefits" />

    <Button
        android:id="@+id/membershipAccountButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/membershipBenefitButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Account" />

    <Button
        android:id="@+id/membershipSignUpButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/membershipAccountButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Sign Up" />

</RelativeLayout>